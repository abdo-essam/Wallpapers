<resources>
    <!-- Base application theme. -->
    <style name="Theme.WallpapersApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="android:fontFamily">@font/actor_regular</item>
        <item name="actionTextColorAlpha">0</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_88ssp</item>
        <item name="fontFamily">@font/actor_regular</item>
    </style>

    <style name="Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">@font/actor_regular</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>


    </style>

</resources>